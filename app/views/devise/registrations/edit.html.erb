<div class="user_profile_banner">

  <div class="user_profile_banner_content">
    <h1>Modifier mon profil</h1>
    <p>Met à jour tes informations personnelles.</p>
  </div>
</div>

<div class="user-profile">
  <div class="user-profile_card">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.error_notification %>

      <div class="user-profile_group">
        <%= f.label :email, "Email", class: "user-profile_label" %>
        <%= f.email_field :email,
              class: "user-profile_input",
              autofocus: true,
              autocomplete: "email",
              required: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="user-profile_hint">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="user-profile_group">
        <%= f.label :password, "Nouveau mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password,
              class: "user-profile_input",
              autocomplete: "new-password",
              required: false %>
        <p class="user-profile_hint">Laisser vide si tu ne veux pas le modifier.</p>
      </div>

      <div class="user-profile_group">
        <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password_confirmation,
              class: "user-profile_input",
              autocomplete: "new-password",
              required: false %>
      </div>

      <div class="user-profile_group">
        <%= f.label :current_password, "Mot de passe actuel", class: "user-profile_label" %>
        <%= f.password_field :current_password,
              class: "user-profile_input",
              autocomplete: "current-password",
              required: true %>
        <p class="user-profile_hint">Requis pour valider les modifications.</p>
      </div>

      <div class="user-profile_actions">
        <%= f.submit "Mettre à jour le profil", class: "btn btn-success btn-lg return-training-btn" %>
      </div>

    <% end %>

    <div class="user-profile_group" style="margin-top: 30px;">
      <h3>Supprimer mon compte</h3>
      <%= button_to "Supprimer mon compte",
          registration_path(resource_name),
          method: :delete,
          data: { confirm: "Es-tu sûr ?", turbo_confirm: "Es-tu sûr ?" },
          class: "btn btn-danger" %>
    </div>

    <div class="user-profile_group">
      <%= link_to "Retour", :back, class: "btn btn-secondary" %>
    </div>

  </div>
</div>
