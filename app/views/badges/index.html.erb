<%= render "shared/navbar" %>
<div class="container">
  <div><h1>Liste des Badges</h1></div>
  <div>
    <% @badges.each do |badge| %>
      <h2>
        <%= link_to badge.name, badge_path(badge) %>
      </h2>
    <% end %>
  </div>
  <div>
    <%= link_to "Accueil", root_path %> |
    <%= link_to "Profil", profile_path %> |
    <%= link_to "Runs", profile_path(anchor: "runs") %> |
    <%= link_to "Guardians", profile_path(anchor: "guardians") %>
  </div>
</div>
