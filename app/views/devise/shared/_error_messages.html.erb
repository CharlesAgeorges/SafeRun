<% if resource.errors.any? %>
  <div id="error_explanation"
       data-turbo-cache="false"
       class="position-fixed top-50 start-50 translate-middle text-center p-3 p-md-4 rounded-3 shadow-lg"
       style="z-index: 1000; background: #dc3545; color: white; max-width: 90%; width: auto; min-width: 280px; transition: opacity 0.3s ease;">
    <h2 class="fs-5 fs-md-4 mb-3">
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul class="list-unstyled mb-3 text-start ps-3 pe-3 small">
      <% resource.errors.full_messages.each do |message| %>
        <li class="mb-1">â€¢ <%= message %></li>
      <% end %>
    </ul>
    <button type="button"
            class="btn fw-bold rounded-3 px-4"
            style="background: white; color: #dc3545;"
            onclick="this.parentElement.style.opacity='0'; setTimeout(() => this.parentElement.remove(), 300)">
      Compris !
    </button>
  </div>
<% end %>
