
<div class="devise-links text-center mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Se connecter", new_session_path(resource_name), class: "devise-link" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "S'inscrire", new_registration_path(resource_name), class: "devise-link" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "devise-link" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Renvoyer les instructions de confirmation", new_confirmation_path(resource_name), class: "devise-link" %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Renvoyer les instructions de déverrouillage", new_unlock_path(resource_name), class: "devise-link" %><br />
  <% end %>
</div>
