<div class="form_container">
  <h1>Inscription</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="input-icon-wrapper">
      <i class="fas fa-user"></i>
      <%= f.input :name, placeholder: "Nom complet", label: false, input_html: { autocomplete: "name" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-envelope"></i>
      <%= f.input :email, placeholder: "Email", label: false, input_html: { autocomplete: "email" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-phone"></i>
      <%= f.input :phone_number, placeholder: "Telephone (+33...)", label: false, input_html: { autocomplete: "tel" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-lock"></i>
      <%= f.input :password, placeholder: "Mot de passe", label: false, input_html: { autocomplete: "new-password" } %>
    </div>

    <%= f.button :submit, "Continuer", class: "btn-cta" %>
  <% end %>
</div>
