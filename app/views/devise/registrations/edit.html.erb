
<div class="form_container mx-3 mt-3">
  <h1>Modifier mon profil</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="input-icon-wrapper">
      <i class="fas fa-user"></i>
      <%= f.input :name,
                  placeholder: "Nom",
                  label: false,
                  autofocus: true,
                  input_html: { autocomplete: "name" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-envelope"></i>
      <%= f.input :email,
                  placeholder: "Email",
                  label: false,
                  required: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-phone"></i>
      <%= f.input :phone_number,
                  placeholder: "Telephone (+33...)",
                  label: false,
                  required: true,
                  input_html: { autocomplete: "tel" } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-muted small">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="input-icon-wrapper">
      <i class="fas fa-lock"></i>
      <%= f.input :password,
                  placeholder: "Nouveau mot de passe (laisser vide si inchange)",
                  label: false,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-lock"></i>
      <%= f.input :password_confirmation,
                  placeholder: "Confirmer le nouveau mot de passe",
                  label: false,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="input-icon-wrapper">
      <i class="fas fa-key"></i>
      <%= f.input :current_password,
                  placeholder: "Mot de passe actuel (requis)",
                  label: false,
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div>
      <%= f.button :submit, "Mettre a jour", class: "btn-cta" %>
    </div>

  <% end %>

  <div class="d-flex flex-column align-items-center gap-2 mt-3">
    <%= link_to "Retour", :back, class: "btn-cta" %>
    <%= link_to "Supprimer mon compte",
          registration_path(resource_name),
          method: :delete,
          data: { confirm: "Es-tu sur ?", turbo_confirm: "Es-tu sur ?" },
          class: "btn-cta" %>
  </div>
</div>
