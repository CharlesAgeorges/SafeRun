<<div class="container">
<div class="user-profile_card mw-auto" style="max-width: 500px;">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="user-profile_group">
      <%= f.label :name, "Votre nom", class: "user-profile_label" %>
      <%= f.text_field :name,
            class: "user-profile_input",
            autofocus: true,
            autocomplete: "name" %>
    </div>

    <div class="user-profile_group">
      <%= f.label :email, "Email", class: "user-profile_label" %>
      <%= f.email_field :email,
            class: "user-profile_input",
            autofocus: true,
            autocomplete: "email" %>
    </div>

    <div class="user-profile_group">
      <%= f.label :password, "Mot de passe", class: "user-profile_label" %>
      <%= f.password_field :password,
            class: "user-profile_input",
            autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <p class="user-profile_hint"><%= @minimum_password_length %> caract√®res minimum</p>
      <% end %>
    </div>

    <div class="user-profile_group">
      <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "user-profile_label" %>
      <%= f.password_field :password_confirmation,
            class: "user-profile_input",
            autocomplete: "new-password" %>
    </div>

    <div class="user-profile_actions d-flex justify-content-center mt-4">
      <%= f.submit "S'inscrire", class: "btn btn-success btn-lg return-training-btn" %>
    </div>
  <% end %>
<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
  </div>
</div>
</div>
