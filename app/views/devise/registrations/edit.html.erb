<div class="container" style="background: white; min-height: calc(100vh - 56px); margin: 0 auto; padding: 40px 20px; max-width: 500px;">
<div class="form_container bg-light-gray" style="height: calc(100% - 100px); margin: 0 auto; padding: 20px; max-width: 420px;">

  <div>
    <h1>Modifier mon profil</h1>
    <p>Met à jour tes informations personnelles.</p>
  </div>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>


      <div class="user-profile_group">
        <%= f.label :name, "Nom", class: "user-profile_label" %>
        <%= f.text_field :name,
              class: "user-profile_input",
              autofocus: true,
              autocomplete: "name" %>
      </div>

      <div class="user-profile_group">
        <%= f.label :email, "Email", class: "user-profile_label" %>
        <%= f.email_field :email,
              class: "user-profile_input",
              autocomplete: "email",
              required: true %>
      </div>

      <div class="user-profile_group">
        <%= f.label :phone, "Numéro de téléphone", class: "user-profile_label" %>
        <%= f.input_field :phone_number, class: "user-profile_input", required: true, placeholder: "+33 6 XX XX XX XX" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="user-profile_hint">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="user-profile_group">
        <%= f.label :password, "Nouveau mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password,
              class: "user-profile_input",
              autocomplete: "new-password",
              required: false %>
        <p class="user-profile_hint">Laisser vide si tu ne veux pas le modifier.</p>
      </div>

      <div class="user-profile_group">
        <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password_confirmation,
              class: "user-profile_input",
              autocomplete: "new-password",
              required: false %>
      </div>

      <div class="user-profile_group">
        <%= f.label :current_password, "Mot de passe actuel", class: "user-profile_label" %>
        <%= f.password_field :current_password,
              class: "user-profile_input",
              autocomplete: "current-password",
              required: true %>
        <p class="user-profile_hint">Requis pour valider les modifications.</p>
      </div>

      <div class="user-profile_actions">
        <%= f.submit "Mettre à jour le profil", class: "btn btn-success btn-lg return-training-btn" %>
      </div>

    <% end %>

<div class="user-profile_group d-flex gap-2" style="margin-top: 30px;">
  <%= link_to "Retour", :back,
        class: "btn btn-dark flex-grow-1 d-flex align-items-center justify-content-center",
        style: "min-height: 50px; height: 100%; color: white !important;" %>
  <%= link_to "Supprimer mon compte",
        registration_path(resource_name),
        method: :delete,
        data: { confirm: "Es-tu sûr ?", turbo_confirm: "Es-tu sûr ?" },
        class: "btn btn-dark flex-grow-1 d-flex align-items-center justify-content-center",
        style: "min-height: 50px; height: 100%; color: white;" %>
</div>

</div>
