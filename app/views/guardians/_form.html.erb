<div class="form_container bg-light-gray" style="background: white; min-height: calc(100vh - 56px); margin: 0 auto; padding: 40px 20px; max-width: 500px;">

   <div><h1>Nouveau Guardian</h1></div>

  <%= simple_form_for(guardian) do |f| %>

    <div class="user-profile_group">
      <%= f.label :name, "Nom", class: "user-profile_label" %>
      <%= f.input_field :name, class: "user-profile_input", required: true %>
    </div>

    <div class="user-profile_group">
      <%= f.label :phone, "Numéro de téléphone", class: "user-profile_label" %>
      <%= f.input_field :phone_number, class: "user-profile_input", required: true, placeholder: "+33 6 XX XX XX XX" %>
    </div>

    <div class="user-profile_actions">
     <%= f.submit "Enregistrer", class: "btn" %>
    </div>

  <% end %>
</div>
